        <Button Grid.Row="12" Content="Update Data" Margin="38,22.6,290,10" Click="Button_Click_2" />
        <Button Grid.Row="12" Content="Delete Data" Margin="147,22.6,170,10" Click="Button_Click_3" RenderTransformOrigin="0.5,0.5" />
        <Rectangle Fill="#FFD8D8" HorizontalAlignment="Center" Height="63"  Stroke="Black" VerticalAlignment="Bottom" Width="87" Margin="324,0,13,9.4" Grid.Row="13" Grid.RowSpan="2"/>
        <Image Source="Images/logo.png" RenderTransformOrigin="0,1" Margin="284,55,-25,0.4" Grid.Row="13" Grid.RowSpan="2"/>
        <Button Background="Transparent" HorizontalAlignment="Left" Height="62" Margin="324,66,0,0" Grid.Row="13" VerticalAlignment="Top" Width="87" Grid.RowSpan="2" Click="Button_Click_4"/>
