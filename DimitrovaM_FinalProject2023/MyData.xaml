        <TextBox x:Name="topssize" HorizontalAlignment="Left" Height="21" Margin="176,10.4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.213,1.374" Grid.Row="8"/>
        <TextBox x:Name="height" HorizontalAlignment="Left" Height="23" Margin="176,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.213,1.374" Grid.Row="7"/>
