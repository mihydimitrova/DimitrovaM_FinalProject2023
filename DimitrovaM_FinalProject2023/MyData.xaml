            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="69*"></RowDefinition>
            <RowDefinition Height="69*"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
            <RowDefinition Height="69*"></RowDefinition>
            <RowDefinition Height="70*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid_"  Margin="25,16.6,26,28" Grid.Row="3" Grid.RowSpan="4" />

        <TextBlock Text="Hips"  Background="Transparent" Foreground="White"  Margin="38,5.8,265,32.8" FontSize="20" RenderTransformOrigin="0.501,0.5" Grid.Row="9"/>
