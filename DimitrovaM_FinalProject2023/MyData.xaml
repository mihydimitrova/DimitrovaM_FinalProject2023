        <TextBox x:Name="arms" HorizontalAlignment="Left" Height="21" Margin="176,50.8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.213,1.374" Grid.Row="9" Grid.RowSpan="2"/>
        <Label Content="Legs"  Background="Transparent" Foreground="White"  Margin="38,0.2,265,28.6" Style="{StaticResource SF Light Label}" FontSize="20" Grid.Row="10"/>
        <TextBox x:Name="legs" HorizontalAlignment="Left" Height="21" Margin="176,10.2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.213,1.374" Grid.Row="10"/>
        <Label Content="Waist"  Background="Transparent" Foreground="White"  Margin="50,33.2,253,68.4" Style="{StaticResource SF Light Label}" FontSize="20" Grid.Row="10" Grid.RowSpan="2"/>
        <TextBox x:Name="waist" HorizontalAlignment="Left" Height="21" Margin="176,47.2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" RenderTransformOrigin="0.213,1.374" Grid.Row="10"/>
        <Label Content="Chest"  Background="Transparent" Foreground="White"  Margin="30,4.4,273,17.4" Style="{StaticResource SF Light Label}" FontSize="20" RenderTransformOrigin="0.501,0.5" Grid.Row="11"/>
