<Window x:Class="DimitrovaM_FinalProject2023.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimitrovaM_FinalProject2023"
        mc:Ignorable="d"
        Title="Menu" Height="932" Width="430">
    <Window.Background>
        <ImageBrush ImageSource="cherventoto charshafchebluri.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name ="mydata" BorderThickness="4" Content="My Data" Style="{StaticResource SF Bold}" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="135" Height="58"  Background="Transparent" BorderBrush="#FF6F0C0C" Foreground="White" Margin="154,1.6,135,10" Grid.Row="4" Click="mydata_Click" >
            <Button.Resources >
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"  ></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name ="order" BorderThickness="4" Content="Order" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="135" Height="58"  Background="Transparent" BorderBrush="#FF6F0C0C" Foreground="White" Margin="154,10,135,1.6" Grid.Row="5" Click="order_Click" >
            <Button.Resources >
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="30"  />
                </Style>
            </Button.Resources>
            <Button.Style>
                <StaticResource ResourceKey="SF Bold"/>
            </Button.Style>
        </Button>
    </Grid>
</Window>
